<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#2C159E"
    android:layout_height="match_parent"
    tools:context=".FolderActivity">

    <LinearLayout
        android:id="@+id/back2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/back2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.75"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/whiteBack"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/back1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.7"
        android:orientation="horizontal" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/music"
        app:layout_constraintTop_toTopOf="@id/whiteBack"
        android:layout_marginTop="32dp"
        tools:listitem="@layout/music_item_view"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="16dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_arrow"
        android:layout_width="38dp"
        android:layout_height="38dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#4025B5"
        app:cardCornerRadius="19dp">

        <ImageView
            android:id="@+id/iv_back"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:background="@drawable/ic_back"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/search_card"
        android:layout_width="0dp"
        android:layout_height="54dp"
        app:layout_constraintStart_toEndOf="@+id/btn_arrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_arrow"
        app:layout_constraintBottom_toBottomOf="@id/btn_arrow"
        android:layout_marginStart="32dp"
        android:background="#F0EEEF"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="27dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="#4025B5"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/search_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:backgroundTint="@color/white"
                android:background="@drawable/search"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="26dp"/>


            <EditText
                android:id="@+id/et_search"
                android:layout_width="0dp"
                android:maxLines="1"
                android:clickable="true"
                android:textColorHint="@color/white"
                android:focusable="true"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/search_icon"
                android:layout_marginStart="12dp"
                android:background="@null"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textSize="18sp"
                android:layout_marginEnd="8dp"
                android:hint="@string/search"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_folder_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ambient"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        app:layout_constraintTop_toBottomOf="@id/search_card"
        app:layout_constraintBottom_toTopOf="@id/back2"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="32dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="40sp"
        android:fontFamily="sans-serif-condensed"/>

    <ImageView
        android:id="@+id/folder_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_thunder"
        android:backgroundTint="#765CE8"
        app:layout_constraintTop_toTopOf="@id/tv_folder_name"
        app:layout_constraintBottom_toBottomOf="@id/tv_folder_name"
        app:layout_constraintStart_toStartOf="@id/btn_arrow"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="72 tracks"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-condensed"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/tv_folder_name"
        app:layout_constraintEnd_toEndOf="@id/tv_folder_name"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/music"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="0dp"
        android:background="@drawable/back3"
        app:layout_constraintHeight_percent="0.088"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardPausePlay"
            android:layout_width="38dp"
            android:layout_height="38dp"
            app:layout_constraintBottom_toBottomOf="@id/cardMusicPhoto"
            app:cardCornerRadius="19dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp">

            <ImageView
                android:id="@+id/pauseAndPlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_pause"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/musicName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Months"
            app:layout_constraintTop_toTopOf="@id/cardMusicPhoto"
            app:layout_constraintStart_toEndOf="@id/cardMusicPhoto"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginStart="16dp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintEnd_toStartOf="@id/cardPausePlay"
            android:layout_marginEnd="16dp"/>

        <TextView
            android:id="@+id/musicAuthor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/cardMusicPhoto"
            app:layout_constraintTop_toBottomOf="@id/musicName"
            android:text="Calvin Harris"
            android:textColor="@color/white"
            android:layout_marginStart="16dp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintEnd_toStartOf="@id/cardPausePlay"
            android:layout_marginEnd="16dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardMusicPhoto"
            android:layout_width="44dp"
            android:layout_height="44dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            app:cardCornerRadius="22dp">

            <ImageView
                android:id="@+id/onGoingMusicImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:layout_gravity="center"/>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>