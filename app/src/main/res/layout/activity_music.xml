<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#170C24"
    android:layout_height="match_parent"
    tools:context=".MusicActivity">

    <LinearLayout
        android:id="@+id/back5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.87"
        android:background = "@drawable/back5"
        android:orientation="horizontal" />

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_arrow"
        android:layout_width="38dp"
        android:layout_height="38dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="#251B31"
        app:cardCornerRadius="19dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:background="@drawable/ic_back"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Ambient"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="@id/btn_arrow"
        app:layout_constraintBottom_toBottomOf="@id/btn_arrow"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardMusicPhoto"
        android:layout_width="220dp"
        android:layout_height="220dp"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintWidth_percent="0.4"
        app:cardCornerRadius="120dp"
        app:layout_constraintVertical_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/back5">

        <ImageView
            android:id="@+id/musicPhoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:background="#251B31"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="48dp"
        app:cardCornerRadius="24dp"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="@id/cardMusicPhoto"
        app:layout_constraintBottom_toBottomOf="@id/cardMusicPhoto"
        app:layout_constraintStart_toStartOf="@id/cardMusicPhoto"
        app:layout_constraintEnd_toEndOf="@id/cardMusicPhoto"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_play_pause"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_seekBar"
        android:backgroundTint="#2C159E"
        app:cardCornerRadius="30dp">

        <ImageView
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/playPause"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_play_button_arrowhead"
            android:layout_height="wrap_content"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/musicName"
        android:layout_width="0dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:maxLines="1"
        android:textAlignment="center"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        android:text="Clothes"
        android:textColor="#170C24"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:textSize="31sp"
        app:layout_constraintTop_toBottomOf="@id/cardMusicPhoto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/musicAuthor"
        android:layout_width="0dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:maxLines="1"
        android:textAlignment="center"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        android:text="Calvin Harris"
        android:textSize="17sp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/musicName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="2dp"/>

    <SeekBar
        android:id="@+id/tv_seekBar"
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:progressTint="#170C24"
        android:thumbTint="#170C24"
        android:progressBackgroundTint="#170C24"
        android:layout_height="24dp"
        app:layout_constraintTop_toBottomOf="@id/tv_start_time"
        android:layout_marginTop="18dp"/>

    <TextView
        android:id="@+id/tv_start_time"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp"
        android:textColor="#170C24"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/musicAuthor"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"/>


    <TextView
        android:id="@+id/musicDuration"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="32dp"
        android:textColor="#170C24"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/tv_start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="03:41"/>

    <ImageButton
        android:id="@+id/playNext"
        android:layout_width="40dp"
        android:layout_height="32dp"
        android:background="@drawable/ic_next"
        app:layout_constraintTop_toTopOf="@id/btn_play_pause"
        app:layout_constraintBottom_toBottomOf="@id/btn_play_pause"
        android:backgroundTint="#170C24"
        app:layout_constraintStart_toEndOf="@id/btn_play_pause"
        android:layout_marginStart="24dp"/>

    <ImageButton
        android:id="@+id/playPrevious"
        android:layout_width="40dp"
        android:layout_height="32dp"
        android:background="@drawable/ic_previous"
        app:layout_constraintTop_toTopOf="@id/btn_play_pause"
        app:layout_constraintBottom_toBottomOf="@id/btn_play_pause"
        android:backgroundTint="#170C24"
        app:layout_constraintEnd_toStartOf="@id/btn_play_pause"
        android:layout_marginEnd="24dp"/>

